{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/xfaith4/genesys-contract-client/docs/ai/test-report.schema.json",
  "title": "Genesys Contract Client Test Report",
  "description": "Machine-readable evidence report for CI/testing runs.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "run",
    "summary",
    "commands",
    "findings",
    "evidence",
    "residualRisks"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^1\\.0\\.0$"
    },
    "run": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "utcTimestamp",
        "repository",
        "branch",
        "commitSha"
      ],
      "properties": {
        "utcTimestamp": {
          "type": "string",
          "format": "date-time"
        },
        "repository": {
          "type": "string",
          "minLength": 1
        },
        "branch": {
          "type": "string",
          "minLength": 1
        },
        "commitSha": {
          "type": "string",
          "pattern": "^[a-fA-F0-9]{7,40}$"
        },
        "actor": {
          "type": "string",
          "minLength": 1
        },
        "environment": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "os": {
              "type": "string",
              "minLength": 1
            },
            "node": {
              "type": "string",
              "minLength": 1
            },
            "python": {
              "type": "string",
              "minLength": 1
            },
            "pwsh": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "status",
        "totalChecks",
        "passedChecks",
        "failedChecks",
        "durationSeconds"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "pass",
            "fail",
            "partial"
          ]
        },
        "totalChecks": {
          "type": "integer",
          "minimum": 0
        },
        "passedChecks": {
          "type": "integer",
          "minimum": 0
        },
        "failedChecks": {
          "type": "integer",
          "minimum": 0
        },
        "durationSeconds": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "commands": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "command",
          "cwd",
          "exitCode",
          "durationMs"
        ],
        "properties": {
          "command": {
            "type": "string",
            "minLength": 1
          },
          "cwd": {
            "type": "string",
            "minLength": 1
          },
          "exitCode": {
            "type": "integer"
          },
          "durationMs": {
            "type": "integer",
            "minimum": 0
          },
          "stdoutExcerpt": {
            "type": "string"
          },
          "stderrExcerpt": {
            "type": "string"
          }
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "severity",
          "title",
          "details",
          "status"
        ],
        "properties": {
          "severity": {
            "type": "string",
            "enum": [
              "Critical",
              "High",
              "Medium",
              "Low"
            ]
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "details": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": [
              "open",
              "fixed",
              "accepted-risk"
            ]
          },
          "file": {
            "type": "string",
            "minLength": 1
          },
          "line": {
            "type": "integer",
            "minimum": 1
          },
          "evidenceRef": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "evidence": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type",
          "path"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "log",
              "report",
              "artifact",
              "diff"
            ]
          },
          "path": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "residualRisks": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
